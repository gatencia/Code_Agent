<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Other standard entries... -->
    
    <!-- Camera permissions -->
    <key>NSCameraUsageDescription</key>
    <string>This app needs camera access to capture the code on your screen.</string>
    
    <!-- Allow arbitrary loads for local network -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
    </dict>
    
    <!-- Local network usage description -->
    <key>NSLocalNetworkUsageDescription</key>
    <string>This app uses your local network to send images to your computer.</string>
    
    <!-- Prevent sleep -->
    <key>UIRequiresPersistentWiFi</key>
    <true/>
</dict>
</plist>